<Window x:Class="pract9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pract9"
        mc:Ignorable="d"
        Title="Структуры" Height="450" Width="313" ResizeMode="CanMinimize">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Выход" Click="выход_Click"></MenuItem>
            <MenuItem Header="О программе" Click="справка_Click" ></MenuItem>
        </Menu>
        <DataGrid x:Name="dataGrid" Margin="0,91,0,138" HorizontalAlignment="Center" Width="169" IsReadOnly="True"/>
        <Button Content="Рассчитать" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top" Click="Button_Click" FontSize="18" Width="169"/>
        <TextBlock HorizontalAlignment="Left" Margin="28,332,0,0" Text="Средний результат:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="result" HorizontalAlignment="Left" Margin="176,332,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="109" FontSize="16" IsReadOnly="True"/>

    </Grid>
</Window>
